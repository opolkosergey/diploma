@model Diploma.Core.Models.UserTask

<div class="col-lg-9">
    <form asp-action="CreateUserTask">
        <div class="form-horizontal">
            <h4>UserTask</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Summary" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Summary" class="form-control" />
                    <span asp-validation-for="Summary" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input asp-for="SignatureRequired" />
                        <label asp-for="SignatureRequired"></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SignatureFromUser" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SignatureFromUser" class="form-control" id="allusers"/>
                    <span asp-validation-for="SignatureFromUser" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AssignedTo" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="AssignedTo" class="form-control" id="organizationusers"/>
                    <span asp-validation-for="AssignedTo" class="text-danger"></span>
                </div>
            </div>            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>

    <div>
        <a asp-action="TasksList">Back to List</a>
    </div>
</div>