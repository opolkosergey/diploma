                    <input asp-for="NewAccessForUser" id="allusers" class="form-control" />
                    <span asp-validation-for="NewAccessForUser" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <label asp-for="RequestSignature">
                            <input asp-for="RequestSignature" />
                            @Html.DisplayNameFor(m => m.RequestSignature)
                        </label>
                    </div>
                </div>
            </div>
            
